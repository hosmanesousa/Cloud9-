<% include partials/header %>

<div class = "container">

<header class = "jumbotron">
    <div class = "container">
     <h1>Welcome to the camp</h1>
     <p>
         <a class = "btn btn-primary btn-lg" href ="/campgrounds/news">Add a New Campground</a>
     </p>
    </div>
     
</header>

<div class = "row text-center" style ="display:flex; flex-wrap: wrap;">
    <% for (let i = 0; i < campgrounds.length; i++) { %>
       <div class = "col-md-3 col-sm-6">
           <div class = "thumbnail">
              <img src = "<%= campgrounds[i].image %>">
              <div class = "caption">
                  <h4><%= campgrounds[i].name %></h4>
              </div>
              <p>                         <!-- -->
                  <a href="/campgrounds/<%= campgrounds[i]._id %>" class = "btn btn-primary">More info</a>
              </p>
       </div>
      </div>
  <% } %>
    </div>
</div>

<% include partials/footer %>