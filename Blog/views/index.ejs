<% include ./partials/header %>

<div class = "ui main text container">
    <div class ="ui huge header">Blog</div>
    <div class = "ui top attached segment">
        <div class ="ui divided items">
            <% blogs.forEach(function(blog) { %>
            <div class ="item">
                <div class = "image"> <!-- To help constrain the size of the image, avoid large images-->
                    <img src = "<%= blog.image %>" >
                <div class = "content">
                    <a class = "header" href = "/blogs/<%= blog._id %>"><%= blog.title %></a>
                    <div class = "meta">
                        <span><%= blog.created.toDateString()%></span>
                    </div>
                    <div class ="description">
                        <p><%- blog.body.substring(0, 100) %>...</p> <!-- get the sanitized html content -->
                    </div>
                    <div class ="extra">
                        <a class = "ui secondary button" href = "/blogs/<%= blog._id %>"><%= blog.title %>
                        Read More <!--  <i class= "right chevron icon"></i> -->
                        </a>
                    </div>
                </div>
            </div>
          </div>
      <% }); %>
        </div>
    </div>
</div>


<% include ./partials/footer %> 